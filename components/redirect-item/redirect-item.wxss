/* components/redirect-item/redirect-item.wxss */
:host {
  width: 100%;
}

.redirect-item-wrapper {
  box-sizing: border-box;
  width: 100%;
  height: 100rpx;
  position: relative;
  padding: 0 30rpx 0 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 33rpx;
  background: #fff;
}

.redirect-item-wrapper .redirect-item-icon {
  position: absolute;
  left: 30rpx;
  top: 50%;
  width: 45rpx;
  height: 45rpx;
  transform: translateY(-50%);
}
