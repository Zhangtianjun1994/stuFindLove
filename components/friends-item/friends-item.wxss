/* components/focus-item/focus-item.wxss */

:host {
  display: block;
}

.focus-item {
  display: flex;
  justify-content: row;
  width: 100%;
  height: 300rpx;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding: 20rpx 50rpx;
  background: #fff;
}

.head-img image {
  width: 200rpx;
  height: 120rpx;
  transform: translateX(-40rpx);
}

.head-img {
  width: 120rpx;
  height: 120rpx;
  overflow: hidden;
  border-radius: 50%;
}

.info-wrapper {
  display: flex;
  width: 300rpx;
  flex-direction: column;
  font-size: 25rpx;
  color: #555;
}

.info-wrapper .nickname {
  font-size: 50rpx;
  color: #222;
}

.info-wrapper .gender {
  align-self: flex-end;
}

.info-wrapper .row {
  display: flex;
  width: 100%;
  flex-direction: row;
  position: relative;
}

.info-wrapper .row.main-row {
  margin-bottom: 20rpx;
}

.info-wrapper .row {
  margin-bottom: 5rpx;
}

.info-wrapper .row view:not(:last-child) {
  margin-right: 30rpx;
}

.focus-status {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.focus-status .focus-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 20rpx;
}

.focus-status .focus-label {
  font-size: 30rpx;
  color: #707070;
}

.focus-status .is-focus {
  background: url(../../images/icon/icon-focus-already.png);
}

.focus-status .not-focus {
  background: url(../../images/icon/icon-focus-add.png);
}

.focus-status .both-focus {
  background: url(../../images/icon/icon-focus-both.png);
}